{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "baseUrl": "src",
    "target": "ESNext",
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  }
}
